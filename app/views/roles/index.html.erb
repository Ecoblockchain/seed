<% for role in @roles %>
	<table class="seed-admin seed-roles" id="<%= role.name %>_table">
		<tr>
			<th>Role</th>
			<th colspan="3">Description</th>
			<th colspan="3" class="addlink">
				<span class="seed-admin-tag">
				<% use_lightview -%>
				<%= link_to_lightview( "Add User to #{role.name}",
						{:controller => 'javascript', :action => 'list_users', :role => role.id}, 
	        			{}, 
	        			{:title => "'Click on a User to add #{role.name.pluralize}'"}, 
	        			{:autosize => false, :width => 250, :height => 350} 
	      		)%>	
				</span>
			</th>
		</tr>
		<tr class="role">
			<td class="role"><strong><%= role.name %></strong></td>
			<td colspan="4"><%= role.description %></td>
		</tr>
		<tr class="usertitle">
			<th class="editrole">
				<span class="seed-admin-tag seed-edit-tag">
					<%= link_to "edit #{role.name}", edit_role_path(role)%>|<%= link_to "X", role_path(role), :confirm => 'Delete this role?', :method => :delete %>
				</span>
			</th>
			<th>User Name</th>
			<th>Login</th>
			<th>Email</th>
			<th></th>
		</tr>
		<%= render :partial => "userrow", :collection => role.users, :locals => {:roleid => role.id} %>
	</table>
<% end -%>
