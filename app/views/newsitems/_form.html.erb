<% form_for(@newsitem, :url => newsitem_path(@page, @newsitem), :html => {:class => "seed-admin"}) do |f| %>
  <%= f.error_messages %>
  <fieldset>
  <div class="input-row">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="input-row">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  </fieldset>
  <div>
	<%= f.hidden_field :page_id %>
    <%= f.submit "#{submit}" %> or <%= link_to_function 'cancel', 'history.go(-1)' %>
  </div>
  
<% end %>