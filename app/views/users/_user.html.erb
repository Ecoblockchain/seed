<tr class="<%= cycle("odd", "even") %>" id="user_<%= user.id %>">
  <% if @role %>
    <td><span class="seed-admin-tag">
	  <%= link_to_remote("remove", 
	  :url => {:controller => "javascript",
	  		 :action => "remove_role", 
	  		 :id => user.id, 
	  		 :role => @role,
	  }) %></td>
	<% end -%>
	<td><strong><%= user.name %></strong></td>
	<td><%= user.login %></td>
	<td><%= user.email %></td>
	<td><%= boolean_to_string(user.active?, "active", "not activated") %></td>
	<td>
		<% user.roles.each do |role| %>
			<%= "#{role.name} " %>
		<% end -%>
	</td>
	<td>
	   <span class="seed-admin-tag seed-edit-tag">
	   	<%= link_to "X", user_path(user), :confirm => 'Delete this user?', :method => :delete %>
	   </span>
	</td>
</tr>