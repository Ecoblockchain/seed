<div id="seed-admin-form">
	<h2>Image Upload</h2>
	
	<ul id="ajax-error"></ul>
	
	<% form_for(:image, 
					   :url => ajax_create_images_path, 
					   :html => { :multipart => true, 
								  :method => :post,
								  :target => "upload_frame",
								  :class => "seed-admin ajax", 
								  :id => "ajax_create" }) do |f| %>
	  <fieldset id="image">
	  <div class="input-row">
	    <%= f.label :uploaded_data, "Choose a file to upload:" %>
		<%= f.file_field :uploaded_data %>
		<%= image_tag "spinner.gif", :id => 'spinner', :size => "31x31", :alt => 'spinner', :style => "display:none;" %>
	  </div>
	  </fieldset>
	  <div>
	    <%= submit_tag 'Upload', :onclick => "Element.show('spinner')" %> or <%= link_to_function 'cancel', "Lightview.hide();" %>
	  </div>
	<iframe id='upload_frame' name="upload_frame" style="width:1px;height:1px;border:0px" src="about:blank"></iframe>


	
	<% end -%>
</div>

