<div id="sortableitems">
<% for article in @page.articles %>
	<div div id="sortableitem_<%= article.id %>" class="article">
		<% if logged_in? && editable?(@page) %>
			<span class="seed-admin-tag seed-edit-tag">
				<%= link_to "edit", edit_article_path(@page, article)%>|<%= link_to "X", article_path(@page, article), :confirm => 'Delete this article?', :method => :delete %>
			</span>
		<% end -%>
		<h3><%= article.title %></h3>
		<%= textilize(article.content) %>
	</div>
<% end -%>
</div>
<% if logged_in? %>
<%= sortable_element('sortableitems',  
					 :url => {:controller => "javascript", :action => "update_article_order", :class_name => article.class.name},
					 :tag => :div) %>
<% end -%>