<% if @page.requires_sidebar? %>
  <div class="span-14 colborder">
    <%= seed_render_all @articles, "articles" %>
    <%= will_paginate @articles %>
  </div>
  <div class="span-4 last">
    <%= seed_page_components %>
    <ul><%= seed_flat_child_links(@page) %></ul>
  </div>

<% else -%>
  <%= seed_render_all @articles, "articles" %>
  <%= will_paginate @articles %>
<% end -%>