<div id="articles">
<% for article in @page.articles %>
	<div div id="article_<%= article.id %>" class="article">
		<% if logged_in? %>
			<span class="seed-admin-tag seed-edit-tag">
				<%= link_to "edit", edit_page_article_path(@page, article)%>|<%= link_to "X", page_article_path(@page, article), :confirm => 'Delete this article?', :method => :delete %>
			</span>
		<% end -%>
		<h3><%= article.title %></h3>
		<%= textilize(article.content) %>
	</div>
<% end -%>
</div>
<% if logged_in? %>
<%= sortable_element('articles',  
					 :url => {:controller => "javascript", :action => "update_article_order"},
					 :tag => :div) %>
<% end -%>