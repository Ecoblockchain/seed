<div class="component" id="sortablecomponent_<%= component.id %>">

    <% if editable?(@page) %>
	  	<span class="seed-admin-tag seed-edit-tag">
	  		<%= link_to "edit", edit_component_path(@page, component)%>|<%= link_to "X", component_path(@page, component), :confirm => 'Delete this component?', :method => :delete %>
	      <%= image_tag "icons/drag_handle.gif", :size => "11x11", :class => "handle" %>
	  	</span>
	  <% end -%>
	  
	  <%= content_tag(:h3, component.title) %>
	  
    <% component.snippets.each do |snippet| -%>
      <h4><%= link_to(snippet.title, page_path(component.source_page)) %></h4>
    <% end -%>

</div>


