<ul id="menupages">
<% for page in @menupages %>
  <li class="level_<%= page.tree_level %>" id="page_<%= page.id %>">
	  <%= link_to page.name, page_articles_path(page) %> 
	  <%= link_to "edit", edit_page_path(page), :class => "edit" %>
	  <%= image_tag "icons/drag_handle.gif", :size => "11x11", :class => "handle" %>
  
  	  <% if page.children %>
  	  	 <ul class="child">
  	  	 <% for child in page.children %>
  	  	   <li class="level_<%= child.tree_level %>" id="page_<%= child.id %>">
				<%= link_to child.name, page_articles_path(child) %> 
				<%= link_to "edit", edit_page_path(child), :class => "edit" %>
				<%= image_tag "icons/drag_handle.gif", :size => "11x11", :class => "handle" %>
			</li>
  	  	 <% end -%>
  	  	 </ul>
  	  <% end -%>
  </li>
<% end %>
  <%= link_to "Add Page", new_page_path %>
</ul>
<%= sortable_element('menupages', :tree => true, :url => {:controller => "javascript", :action => "update_page_order"}) %>