<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
	  <title><%= head_title %></title>
	  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	  <meta http-equiv="imagetoolbar" content="no" />
	  <meta name="distribution" content="all" />
	  <meta name="robots" content="all" />	
	  <meta name="resource-type" content="document" />
	  <meta name="MSSmartTagsPreventParsing" content="true" />
	  <%= stylesheet_link_tag 'seed', 'default' %>
	  <%= yield :lightview_css %>
	  <%= javascript_include_tag 'prototype', 'effects', 'dragdrop', 'scriptaculous.js? Â» load=effects', 'application' %>
	  <%= yield :lightview_js %>
	</head>
	<body>
		<div id="container">
			<%= flash_messages %>
			<div id="head">
				<%= page_title %>
				<p><%= @page.description unless !@page %></p>
				<% if logged_in? && params[:controller] != "pages" %>
					<span class="seed-admin-tag"><%= add_resource_link(params[:controller]) %></span>
				<% end -%>
			</div>
			
			<% if primary_horizontal? %>
			<div class="horizontal-menu">
				<div id="primary-menu">
					<ul id="menupages" class="menu">
						<%= render :partial => "layouts/menu", :collection => @primary_pages %>
						<% if logged_in? %>
							<li><%= link_to "Add Page", new_page_path %></li> 
						<% end -%>
					</ul>
					<% if logged_in? %>
					<%= sortable_element('menupages',  
										 :url => {:controller => "javascript", :action => "update_page_order"},
										 :tree => true,
										 :constraint => false,
										 :handle => 'handle') %>
					<% end -%>
				</div>
			</div>
			<% end -%>
			<% if secondary_menu? && secondary_horizontal? %>
			<div class="horizontal-menu">
				<div id="secondary-menu">
					<ul id="menupages2" class="menu">
						<%= render :partial => "layouts/menu", :collection => @secondary_pages %>
					</ul>
					<% if logged_in? %>
					<%= sortable_element('menupages2',  
										 :url => {:controller => "javascript", :action => "update_page_order"},
										 :tree => true,
										 :constraint => false,
										 :handle => 'handle') %>
					<% end -%>
				</div>
			</div>
			<% end -%>
			<div id="left">
				<% if !primary_horizontal? %>
				<div id="primary-menu">
					<ul id="menupages" class="menu">
						<%= render :partial => "layouts/menu", :collection => @primary_pages %>
						<% if logged_in? %>
							<span class="seed-admin-tag seed-edit-tag"><%= link_to "Add Page", new_page_path %></span> 
						<% end -%>
					</ul>
					<% if logged_in? %>
					<%= sortable_element('menupages',  
										 :url => {:controller => "javascript", :action => "update_page_order"},
										 :tree => true,
										 :handle => 'handle') %>
					<% end -%>
				</div>
				<% end -%>
				<% if secondary_menu? && !secondary_horizontal? %>
				<div id="secondary-menu">
					<ul id="menupages2" class="menu">
					<%= render :partial => "layouts/menu", :collection => @secondary_pages %>
					</ul>
					<% if logged_in? %>
					<%= sortable_element('menupages2',  
										 :url => {:controller => "javascript", :action => "update_page_order"},
										 :tree => true,
										 :handle => 'handle') %>
					<% end -%>
				</div>
				<% end -%>
				<%= render :partial => "layouts/adminmenu" %>
				<%= render :partial => "users/user_bar" %>
			</div>
			<div id="right">
				<%= yield  %>
			</div>
			<div id="foot">
				<strong>Seed</strong> | a Common Sense CMS from The Media Collective
			</div>
		</div>
	</body>
</html>
