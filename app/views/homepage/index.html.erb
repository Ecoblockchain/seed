<% if @page.requires_sidebar? %>
  <div id="leftcol">
    <%= seed_render_all @articles, "home" %>
    <%= will_paginate @articles %>
  </div>
  <div id="rightcol">
    <%= seed_page_components %>
    <ul><%= seed_flat_child_links(@page) %></ul>
  </div>

<% else -%>
  <%= seed_render_all @articles, "home" %>
  <%= will_paginate @articles %>
<% end -%>

